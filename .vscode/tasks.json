{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build CUDA",
            "command": "/usr/bin/nvcc",
            "args": [
                "-o",
                "${workspaceFolder}/build/testCuda",
                "${workspaceFolder}/cuda/particleSystem/main.cu",
                // "${file}",
                // "-lfreeimage",
                "-L/usr/local/cuda-12.2/nsight-compute-2023.2.2/host/linux-desktop-glibc_2_11_3-x64/Mesa/",
                "-I/usr/include/glad/include/glad",
                "${workspaceFolder}/src/glad.c",
                "-lGL",
                "-lGLU",
                "-lglut",
                "-lGLEW",
                "-lglfw",
                "-lX11",
                "-lXxf86vm",
                "-lXrandr",
                "-lpthread",
                "-lXi",
                "-ldl",
                "-lXinerama",
                "-lXcursor"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [ 
                "$gcc"
            ]
        }
    ]
}